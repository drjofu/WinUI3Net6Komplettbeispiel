<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Traffic">

  <Style TargetType="local:PedestrianLights" >
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="local:PedestrianLights">
          <Border
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}">
            <StackPanel Margin="5">
              <Ellipse Width="50" Height="50" Fill="Red" Margin="5" Name="PART_LightRed"/>
              <Ellipse Width="50" Height="50" Fill="LightGreen" Margin="5" Name="PART_LightGreen"/>
            </StackPanel>

          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>
